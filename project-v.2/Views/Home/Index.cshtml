@model IEnumerable<project_v._2.Models.register>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>งานศรีสะเกษ</h1>

@foreach (var item in Model)
{
    <div class="container my-4">
        <div class="row">
            <div class="container">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="@Html.DisplayFor(model => item.pictruejob1)" class="mx-auto d-block" alt="..." width="400" height="300">
                        </div>
                        <div class="carousel-item">
                            <img src="@Html.DisplayFor(model => item.pictruejob2)" class="mx-auto d-block" alt="..." width="400" height="300">
                        </div>
                        <div class="carousel-item">
                            <img src="@Html.DisplayFor(model => item.pictruejob3)" class="mx-auto d-block" alt="..." width="400" height="300">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="card text-center">
                    <ul class="list-unstyled sec-list">
                        <li><span class="font-control-tahoma f15">ชื่องาน : </span> @Html.DisplayFor(model => item.namejob)</li>
                        <li><span class="font-control-tahoma f15">รายละเอียดงาน : </span> @Html.DisplayFor(model => item.detail)</li>
                        <li><span class="font-control-tahoma f15">สถานที่ : </span> @Html.DisplayFor(model => item.address)</li>
                        <li><span class="font-control-tahoma f15">ราคา : </span> @Html.DisplayFor(model => item.price)</li>
                        @Html.ActionLink("รับงานนี้", "details", new { id = item._id })
                    </ul>
                </div>
            </div>
        </div>
    </div>
}